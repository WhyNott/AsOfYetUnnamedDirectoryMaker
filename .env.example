# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Security (must be at least 32 characters)
SESSION_SECRET=your_very_secure_session_secret_key_at_least_32_characters_long

# Application Configuration
REDIRECT_URL=http://localhost:8080/auth/callback
DATABASE_PATH=./directory.db
PORT=8080
SHEET_RANGE=A:Z
ENVIRONMENT=development

# Session Configuration (in seconds)
SESSION_MAX_AGE=86400

# Logging
LOG_LEVEL=INFO

# Security - Add this for token encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_generate_with_openssl_rand_hex_32

# Production Example:
# ENVIRONMENT=production
# REDIRECT_URL=https://yourdomain.com/auth/callback
# SESSION_MAX_AGE=3600
# LOG_LEVEL=ERROR